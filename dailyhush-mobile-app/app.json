{
  "expo": {
    "name": "Nœma",
    "slug": "noema",
    "version": "1.0.0",
    "scheme": "noema",
    "platforms": [
      "ios",
      "android"
    ],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Nœma needs microphone access for voice journaling features."
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "Nœma needs Bluetooth to connect with your Shift necklace for guided breathing exercises."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#52B788",
          "sounds": []
        }
      ],
      "expo-localization",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "noema-sa"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#0A1612"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anthony.noema",
      "buildNumber": "1.0.0",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#0A1612"
      },
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Nœma needs Bluetooth to connect with your Shift necklace for guided breathing exercises.",
        "NSBluetoothPeripheralUsageDescription": "Nœma needs Bluetooth to connect with your Shift necklace.",
        "NSMicrophoneUsageDescription": "Nœma needs microphone access for voice journaling features.",
        "NSUserNotificationsUsageDescription": "Nœma sends daily mindful quotes to help you interrupt rumination patterns.",
        "UIBackgroundModes": [
          "audio",
          "bluetooth-central"
        ]
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.anthony.noema",
      "versionCode": 1,
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#0A1612"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#064e3b"
      },
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION",
        "RECORD_AUDIO",
        "NOTIFICATIONS"
      ]
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "noema-mobile-app"
      }
    }
  }
}
